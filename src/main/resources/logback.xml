<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Console appender -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %class{0} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- Your app package -->
    <logger name="dev.nuclr" level="INFO" />

    <!-- Root logger (everything else) -->
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
